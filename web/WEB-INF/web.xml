<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AltaEntrenador</servlet-name>
        <servlet-class>servlets.AltaEntrenador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AltaPokemon</servlet-name>
        <servlet-class>servlets.AltaPokemon</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListadoEntrenadores</servlet-name>
        <servlet-class>servlets.ListadoEntrenadores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BorrarPokemon</servlet-name>
        <servlet-class>servlets.BorrarPokemon</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListadoBatallas</servlet-name>
        <servlet-class>servlets.ListadoBatallas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Pociones</servlet-name>
        <servlet-class>servlets.Pociones</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MejorarVida</servlet-name>
        <servlet-class>servlets.Vida</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AltaEntrenador</servlet-name>
        <url-pattern>/AltaEntrenador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AltaPokemon</servlet-name>
        <url-pattern>/AltaPokemon</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListadoEntrenadores</servlet-name>
        <url-pattern>/ListadoEntrenadores</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BorrarPokemon</servlet-name>
        <url-pattern>/BorrarPokemon</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListadoBatallas</servlet-name>
        <url-pattern>/ListadoBatallas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Pociones</servlet-name>
        <url-pattern>/Pociones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MejorarVida</servlet-name>
        <url-pattern>/MejorarVida</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
